{
  "name": "triple-triad",
  "version": "1.0.0",
  "description": "implementation of final fantasy 8's card game for the web",
  "main": "index.js",
  "scripts": {
    "lint": "eslint -c .eslintrc --cache .",
    "clean": "rm -rf dist",
    "start": "better-npm-run start",
    "build": "better-npm-run build",
    "build:prod": "better-npm-run build:prod",
    "build:server": "better-npm-run build:server",
    "test": "better-npm-run test",
    "test:unit": "better-npm-run test:unit",
    "test:integration": "better-npm-run test:integration",
    "test:watch": "npm run test:unit -- --watch",
    "deploy": "git push heroku master"
  },
  "betterScripts": {
    "start": {
      "command": "babel-node src/server/index.js --progress --colors --profile",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build:prod": {
      "command": "webpack -p --config webpack.production.config.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "build:server": {
      "command": "babel ./src -d ./dist",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "build": {
      "command": "npm run clean && npm run build:prod && npm run build:server",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "test": {
      "command": "npm run test:unit && npm run test:integration",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "test:unit": {
      "command": "find ./src -name '*.spec.js' | xargs mocha --compilers js:babel-core/register",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "test:integration": {
      "command": "find ./test -name '*.spec.js' | xargs mocha --compilers js:babel-core/register",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/walkerrandolphsmith/triple-triad.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/walkerrandolphsmith/triple-triad/issues"
  },
  "homepage": "https://github.com/walkerrandolphsmith/triple-triad",
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.14.2",
    "bootstrap": "^3.3.6",
    "cookie-parser": "^1.4.1",
    "cookie-session": "^1.2.0",
    "cors": "^2.7.1",
    "express": "^4.13.3",
    "font-awesome": "^4.5.0",
    "history": "^2.0.0",
    "immutable": "^3.7.5",
    "mailgun-js": "^0.7.7",
    "mongoose": "^4.3.6",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "react": "^0.14.5",
    "react-dom": "^0.14.5",
    "react-redux": "^4.0.0",
    "react-router": "^2.0.0",
    "react-router-redux": "^4.0.0",
    "redux": "^3.0.4",
    "redux-socket.io": "^1.2.0",
    "redux-thunk": "^1.0.2",
    "reselect": "^2.0.1",
    "socket.io": "^1.4.5",
    "socket.io-client": "^1.4.5",
    "superagent": "^1.7.2"
  },
  "devDependencies": {
    "babel": "^6.3.26",
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.26",
    "babel-eslint": "^6.0.0-beta.6",
    "babel-loader": "^6.2.0",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-rewire": "^1.0.0-beta-5",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-runtime": "^6.3.19",
    "babel-template": "^6.3.13",
    "babel-types": "^6.4.1",
    "better-npm-run": "0.0.7",
    "css-loader": "^0.23.1",
    "eslint": "^2.5.1",
    "eslint-plugin-react": "^4.2.3",
    "expect": "^1.13.4",
    "expect-jsx": "^2.2.2",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "less": "^2.5.3",
    "less-loader": "^2.2.2",
    "mocha": "^2.3.4",
